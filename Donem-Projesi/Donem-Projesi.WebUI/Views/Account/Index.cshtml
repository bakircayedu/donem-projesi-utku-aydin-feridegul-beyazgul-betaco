@model IEnumerable<Donem_Projesi.WebUI.Models.UserOrderModel>
@{
    ViewBag.Title = "Index";
}

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h2>Sipariş Bilgileriniz</h2>
            <hr />
            
            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>Sipariş Numarası</th>
                        <th>Sipariş Tarihi</th>
                        <th>Toplam Tutar</th>
                        <th>Sipariş Durumu</th>
                        <th></th>
                    </tr>          
                </thead>
                <tbody>
                   @foreach (var item in Model)
                   {
                        <tr>
                            <td>@item.OrderNumber</td>
                            <td>@item.OrderDate.ToShortDateString()</td>
                            <td>
                                <i class="fas fa-turkish-lira-sign" style="font-size: 13px;"></i>
                                @item.Total
                            </td>
                            <td>@item.OrderState</td>
                            <td>
                                @Html.ActionLink("Ayrıntılar","Details",new {id = item.Id},new {@class = "btn btn-primary"})
                            </td>
                        </tr>
                   }
                </tbody>
            </table>
        </div>
    </div>
</div>
